
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow users to read and write to their own profile picture folder.
    // The {userId} wildcard captures the user's UID from the path.
    // The rule ensures that the UID in the path matches the authenticated user's UID.
    match /profile-pictures/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
